# ==========================================================
# ðŸŸ  Softadastra Chat System â€” Example Environment File
# ==========================================================
# Rename this file to `.env` and fill in the actual credentials
# before running the application.
#
# This file contains all environment variables used by
# db/mysql.js and server.js.
# ==========================================================


# ----------------------------------------------------------
# ðŸŒ Application Settings
# ----------------------------------------------------------

# Node environment: "development" | "production"
NODE_ENV=development

# Port for the chat server
APP_PORT=8080

# Base URL for API requests (optional)
APP_URL=https://softadastra.com


# ----------------------------------------------------------
# ðŸ—„ï¸ MySQL Database Configuration
# ----------------------------------------------------------

# Database host (e.g., localhost, 127.0.0.1, or remote server)
DB_HOST=127.0.0.1

# Database port (default: 3306)
DB_PORT=3306

# Database name
DB_NAME=softadastra_chat

# Database user credentials
DB_USER=root
DB_PASSWORD=secret_password

# Optional alternative variable name (legacy)
# DB_PASS=

# Maximum number of connections in the pool
DB_CONN_LIMIT=20

# Timezone for MySQL session ("Z", "+00:00", "+03:00", etc.)
DB_TIMEZONE=Z

# Strict SQL mode to prevent silent truncations or warnings
DB_SQL_MODE=STRICT_TRANS_TABLES,ERROR_FOR_DIVISION_BY_ZERO,NO_ENGINE_SUBSTITUTION


# ----------------------------------------------------------
# ðŸ” SSL Configuration (Production Only)
# ----------------------------------------------------------

# Whether to use SSL/TLS when connecting to MySQL
# true  => enforce encryption
# false => no SSL (default)
DB_SSL=false

# Path to CA certificate file if DB_SSL=true
# e.g., /etc/ssl/certs/mysql-ca.pem
DB_CA_PATH=


# ----------------------------------------------------------
# ðŸ“¡ Optional WebSocket / Chat Config
# ----------------------------------------------------------

# WebSocket heartbeat interval (ms)
WS_HEARTBEAT_MS=25000

# WebSocket origin restriction (comma-separated)
WS_ALLOWED_ORIGINS=https://softadastra.com,https://app.softadastra.com


# ----------------------------------------------------------
# ðŸ§° Miscellaneous
# ----------------------------------------------------------

# Log level: "debug" | "info" | "warn" | "error"
LOG_LEVEL=info

# Feature flags (comma-separated)
FEATURE_FLAGS=chat,notifications
